<div class = "sidebar">
  <%= render 'shared/user_info' %>
  <%= render 'shared/stats' %>
  <%= render 'shared/track_form' %>
</div>
<div class = "audio-wrap">
  <ul class = "tracks">
  <% if @user.feed.any? %>
    <% @user.feed.each do |track| %>
      <%= render 'tracks/track', track: track %>
    <% end %>
  <% else %>
    <%= render 'shared/no_tracks' %>
  <% end %>
  </ul>
</div>

